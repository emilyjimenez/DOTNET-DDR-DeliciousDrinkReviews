@{

    ViewData["Title"] = "Home";
    Layout = "_Layout";

} 

<h2>Admin Tools</h2>

@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
    @using (Html.BeginForm("LogOff", "Admin"))
    {
        <input type="submit" value="Log out" /
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Login", "Login")</p>
}

